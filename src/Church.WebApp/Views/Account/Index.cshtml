@model Church.WebApp.Models.ApplicationUser
@{
    ViewData["Title"] = "Logowanie";
}

<div class="row" style="min-height: 80vh;">
    <div class="container">
        <div class="col-md-6 p-4">
            <form asp-action="Login">
                <h2><i class="fas fa-bible"></i> @ViewData["Title"]</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Nazwa użytkownika</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Hasło</label>
                    <input type="password" asp-for="Password" class="form-control" autofocus />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Zaloguj" class="btn btn-default btn-primary" />
                </div>

                <input type="hidden" asp-for="ReturnUrl" />
            </form>

        </div>
        <p class="p-4" style="background-image: url('/img/Bible1200.png'); background-position: center bottom; background-repeat: no-repeat; background-size: cover; min-height: 60vh;">Po zalogowaniu, udostepnione zostaną przekłady oznaczone flagą <span class="badge bg-danger">wymaga hasła</span>.<br/>Dostęp do tych treści przeznaczony jest wyłącznie dla członków zboru.</p>
    </div>
</div>

