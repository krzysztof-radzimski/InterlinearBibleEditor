@{
    ViewData["Title"] = "Śpiewajmy dla Jezusa";

    var __host = (this.Context.Request.IsHttps ? "https://" : "http://") + this.Context.Request.Host;
    var __path = this.Context.Request.Path;

}
@using System
@using Church.WebApp.Models
@using IBE.Common.Extensions
@using DevExpress.Xpo;
@using System.Linq;
@using IBE.Data.Model;
@inject IConfiguration Configuration

@model XPView

<div class="max-width-1000" style="padding-top: 20px;">
    <div style="text-align: center;">
        <img src="/img/TloSpiewnik.png" style="max-width: 80%;" /><br/>
        <h1>@ViewData["Title"]</h1>
        <h3>Śpiewnik zborowy<br/>Kościoła Chrześcijan Baptystów w&nbsp;Nowym&nbsp;Dworze Mazowieckim</h3>
    </div>
   
    @foreach (ViewRecord record in Model) {
        var type = (SongGroupType)record["Type"];
        <div class="row">
            <div class="col-auto" style="min-width: 60px;">
                @record["Number"]
            </div>
            <div class="col">
                <a href="/Song?id=@record["Number"]" class="link text-decoration-none">@record["Name"]</a>
            </div>
            <div class="col-auto">
                @type.GetDescription()
            </div>
        </div>
    }
</div>