@{
    ViewData["Title"] = "Nauczanie - kazania, artykuły, skrypty";
    var _listView = false;
}

@model List<ChurchServices.WebApp.Controllers.ArticleInfoBase>

<div class="max-width-1000" style="padding-top: 20px;">
    @Html.Partial("~/Views/Shared/_Baner.cshtml")
    <h1><i class="fas fa-newspaper"></i> @ViewData["Title"]</h1>
    <br />
    <div class="row">
        @foreach (var item in Model) {
            if (item is ChurchServices.WebApp.Controllers.ArticleInfo) {
                var _item = item as ChurchServices.WebApp.Controllers.ArticleInfo;
                var lead = _item.Lead;
                lead = System.Text.RegularExpressions.Regex.Replace(lead, @"[\s\(\,\;][a,i,o,w,z]\s", delegate (System.Text.RegularExpressions.Match m) {
                    return " " + m.Value.Trim() + "&nbsp;";
                }, System.Text.RegularExpressions.RegexOptions.IgnoreCase);

                <a href="../Article?id=@item.Id" class="list-group-item list-group-item-action m-0 border-0" aria-current="true" style="padding-left: 0; padding-right: 0;">
                    <div class="card bg-transparent m-0 p-0 shadow-lg">
                        <div class="row g-0 m-0">
                            <div class="col-md-4 d-lg-block">
                                <div class="d-lg-block" style="background-image: url('data:image/png;base64, @_item.AuthorPicture'); background-repeat: no-repeat; background-position: center center; background-size: cover; max-width: 350px; width: 100%; height: 245px;"></div>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h3 class="card-title text-gradient-church-service">@item.Subject</h3>
                                    <p class="card-text" style="line-height: 1.3;">@Html.Raw(lead)</p>
                                    <p class="card-text" style="line-height: 0.9;"><small class="text-muted">@item.AuthorName <br /> @item.GetDaysAgo()</small></p>
                                </div>
                                <strong class="d-inline-block mb-2 text-success pill-white float-end" style="right: 15px; bottom: 15px; position: absolute;">@_item.Type</strong>
                            </div>
                        </div>
                    </div>
                </a>                               
            }
            else {
                if (!_listView) {
                    _listView = true;
                    @Html.Raw(@"<div style=""display: table;"">")
                }

                <div style="display: table-row;">
                    <div style="display: table-cell; vertical-align: top; padding-top: 10px; padding-right: 5px;">@Html.Raw(item.Date.GetShortDatePl())</div>
                    <div style="display: table-cell; vertical-align: top; padding-top: 10px;"><a href="../Article?id=@item.Id" class="link text-decoration-none">@item.Subject</a></div>
                    <div style="display: table-cell; vertical-align: top; padding-top: 10px; font-size: 80%;"><i>@Html.Raw(item.AuthorName.GetInitials())</i></div>
                </div>

                @if (item == Model.LastOrDefault()) {
                    @Html.Raw(@"</div>")                    
                }
            }
        }
    </div>
</div>